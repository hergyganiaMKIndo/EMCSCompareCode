@{
    ViewBag.Title = "Create Outbound Shipment";
}

@using System.Web.Mvc

<style type="text/css">
    .form-horizontal .control-label {
        text-align: left !important;
    }

    .error {
        display: none;
        color: red;
        font-weight: bold;
    }

    label.error {
        border: none;
        display: none !important;
    }

    .btn-form {
        width: 100px;
    }
</style>

<div class="modal-header bg-orange">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title"><i class="fa fa-filter"></i>&nbsp; Filter Delivery Tracking</h4>
</div>
<div class="modal-body">
    <div class="bootstrap-table bootstrap3">
        <div class="fixed-table-container">
            <table id="tableOutboundFilter" data-toolbar=".toolbar" class="table table-striped"></table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="btn-action">
        @*<button name="ApllyFilter" class="btn-form btn btn-success action-form"><i class="fa fa-paper-plane"></i> Apply</button>*@
        <button name="CancelFilter" class="btn-form btn btn-warning action-form">
            <i class="fa fa-arrow-left"></i> Close</button>
    </div>
</div>