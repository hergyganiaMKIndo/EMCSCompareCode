@{
    Layout = "~/Views/Shared/_Layoutv2.cshtml";
    ViewBag.Title = "Delivery Requisition List Approval";
}

@using System.Web.Mvc
<script type="text/javascript">
    var allowCreate = "@(ViewBag.allowCreate)";
    var allowUpdate = "@(ViewBag.allowUpdate)";
    var allowDelete = "@(ViewBag.allowDelete)";
    var allowRead = "@(ViewBag.AllowRead)";
</script>
<link href="/Scripts/kartik-v-bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
<style type="text/css">
    .form-horizontal .control-label {
        text-align: left !important;
    }

    .toolbarBtn {
        margin-top: 10px;
    }

    .pagination .page-pre .page-link,
    .pagination .page-next .page-link {
        padding: 0 12px !important;
    }

    .modal {
        overflow: auto !important;
    }
</style>

<div class="box box-warning">
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div id="toolbar" class="toolbar">
                    <button class="btn btn-success" type="button" id="btnExportDR">
                        <i class="fa fa-file-excel-o"></i> Download to Excel
                    </button>
                </div>
                <table id="tableDeliveryRequisition" data-toolbar=".toolbar" class="table table-striped"></table>
            </div>
        </div>
    </div>
</div>

<div id='myModalRequest' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.Partial("~/Views/DTS/v2/_FormRequisitingAcc.cshtml")
        </div>
    </div>
</div>
<div id='myModalCkb' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">SEND EMAIL TO CKB</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <div class="checkbox">
                          
                                    @*<input name="SendEmailToCkb" value="true" type="checkbox" /> MAIL TO CKB*@
                                    <label> <input name="SendEmailToCkbSurabaya" value="true" type="checkbox" /> MAIL TO SURABAYA </label><br />
                                    <label> <input name="SendEmailToCkbMakassar" value="true" type="checkbox" /> MAIL TO MAKASSAR </label><br />
                                    <label> <input name="SendEmailToCkbCakungStandartKit" value="true" type="checkbox" /> MAIL TO CAKUNG (OPERATION,STANDART KIT & ENGINE) </label><br />
                                    <label> <input name="SendEmailToCkbBalikpapan" value="true" type="checkbox" /> MAIL TO BALIKPAPAN </label><br />
                                    <label> <input name="SendEmailToCkbBanjarmasin" value="true" type="checkbox" /> MAIL TO BANJARMASIN </label><br />
                          
                            </div>
                            <div for="SendEmailToCkb" class="error">This field is required</div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="CkbNotes" class="control-label">NOTES</label>
                            <textarea class="form-control" id="CkbNotes" name="CkbNotes"></textarea>
                            <div for="CkbNotes" class="error">This field is required</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="button-action">
                    <button id="ApproveOk" name="ApproveOk" class="btn-form btn btn-success" type="button"><i class="fa fa-check"></i> Ok</button>
                    <button name="ApproveCancel" class="btn-form btn btn-warning action-form" onclick="hideModal('myModalCkb');">
                        <i class="fa fa-arrow-left"></i> Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id='myModalUnitOnly' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.Partial("~/Views/DTS/v2/_DeliveryRequisitionUnit.cshtml")
        </div>
    </div>
</div>
<div id='myModalRequestComplete' class='modal modal-complete fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.Partial("~/Views/DTS/v2/_FormCompleteAcc.cshtml")
        </div>
    </div>
</div>


    @section scripts
    {
        <script src="/Scripts/kartik-v-bootstrap-fileinput/js/fileinput.min.js"></script>
        <script src="/Scripts/adminlte.js"></script>
        <script src="@Url.Content("~/Scripts.app/DTS/v2/_FormRequisitingAcc.cshtml.js")"></script>
        <script src="@Url.Content("~/Scripts.app/DTS/v2/DeliveryRequisitionListAcc.cshtml.js?v=2")"></script>
    }

