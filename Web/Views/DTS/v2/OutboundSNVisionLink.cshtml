
@{
    ViewBag.Title = "OutboundSNVisionLink";
}

@using System.Web.Mvc

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Vision Link</h4>
</div>
<div class="modal-body" style="min-height:470px;">

    <div class="row">
        <div class="col-lg-12">
            <table id="tableSNVL" class="table table-bordered"></table>
        </div>
    </div>
</div>
<script type="text/javascript">
    var requestingFormSNVL = {
        initTableSNVLInfo: function (units) {
            var $tableUnit = $('#tableSNVL');
            $tableUnit.bootstrapTable('destroy');
            $tableUnit.bootstrapTable({
                cache: false,
                pagination: true,
                search: false,
                striped: true,
                clickToSelect: true,
                sidePagination: 'server',
                showColumns: false,
                showRefresh: false,
                smartDisplay: false,
                pageSize: '10',
                formatNoMatches: function () {
                    return '<span class="noMatches">-</span>';
                },
                data: units,
                columns: [                
                    
                    {
                        field: 'serialNumber',
                        title: 'SN',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        sortable: true
                    },
                    {
                        field: 'make',
                        title: 'Make',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        sortable: true
                    },
                    {
                        field: 'model',
                        title: 'Model',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        sortable: true
                    },
                    {
                        field: 'moduleTime',
                        title: 'Module Time',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        formatter: formatDateBT,
                        sortable: true
                    },
                    {
                        field: 'longitude',
                        title: 'Longitude',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        sortable: true
                    },
                    {
                        field: 'latitude',
                        title: 'Latitude',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        sortable: true
                    },
                    {
                        field: 'Address',
                        title: 'Address',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        sortable: true
                    },
                    {
                        field: 'smu',
                        title: 'SMU',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        sortable: true
                    },
                    {
                        field: 'ETL_DATE',
                        title: 'ETL Date',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        formatter: formatDateBT,
                        sortable: true
                    },
                    {
                        field: 'LocationReportTime',
                        title: 'Location Report Time',
                        halign: 'left',
                        align: 'left',
                        class: 'text-nowrap',
                        formatter: formatDateBT,
                        sortable: true
                    }
                ]
            });
        },
    }
</script>
