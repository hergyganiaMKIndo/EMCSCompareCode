@{
    Layout = "~/Views/Shared/_Layoutv3.cshtml";
    ViewBag.Title = "DTS Home";
}

@using System.Web.Mvc
<link href="/Scripts/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet">
<link href="/Scripts/kartik-v-bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />

<style type="text/css">
    .form-horizontal .control-label {
        text-align: left !important;
    }

    .toolbarBtn {
        margin-top: 10px;
    }

    .pagination .page-pre .page-link,
    .pagination .page-next .page-link {
        padding: 0 12px !important;
    }

    .modal {
        overflow: auto !important;
    }
    .new {
        /*position: absolute;*/
        width: 100px;
        height: 40px;
        left: 1165px;
        right: 0;
        top: 106px;
        background: linear-gradient(276.59deg, #FFC52B 4.46%, #FFD567 80.88%);
        box-shadow: 0px 4px 10px rgba(252, 186, 18, 0.3);
        border-radius: 5px;
    }
    .icondownload {
        /*position: absolute;*/
        width: 50px;
        height: 40px;
        left: 889px;
        top: 106px;
        background: linear-gradient(276.59deg, #FFC52B 4.46%, #FFD567 80.88%);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.06);
        border-radius: 5px;
        border: 2px solid;
    }
</style>
<div class="box box-warning">
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-8">
                    <h4>Request For Delivery</h4>
                    <div>
                        <label id="countnotifToday"></label> New Request For Today
                    </div>
                </div>
                <div class="col-md-4">
                    <button class="new pull-right" type="button" id="btnAddRequest">
                        CREATE DR
                    </button>                 
                    <img id="btnExportDR" src="~/Images/download.png" class="icondownload pull-right">
                </div>
            </div>            
        </div>       

        <div class="row">
            <div class="col-md-12">          
                <div>
                    <table id="tableDeliveryRequisition" data-toolbar=".toolbar" class="table table-striped"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id='myModalRequest' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="width:1290px;margin-left:-225px">
            @Html.Partial("~/Views/DTS/v2/_FormRequisiting.cshtml")
        </div>
    </div>
</div>

<div id='myModalUnitOnly' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.Partial("~/Views/DTS/v2/_DeliveryRequisitionUnit.cshtml")
        </div>
    </div>
</div>

@section scripts
{
    <script src="/Scripts/kartik-v-bootstrap-fileinput/js/fileinput.min.js"></script>
    <script src="/Scripts/adminlte.js"></script>
    <script src="@Url.Content("~/Scripts.app/DTS/v2/_FormRequisiting.cshtml.js")"></script>
    <script src="@Url.Content("~/Scripts.app/DTS/v2/DeliveryRequisitionList.cshtml.js")"></script>

}
