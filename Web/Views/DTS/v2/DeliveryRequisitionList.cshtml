@{
    Layout = "~/Views/Shared/_Layoutv2.cshtml";
    ViewBag.Title = "Delivery Requisition List";
}

@using System.Web.Mvc
<script type="text/javascript">
    var allowCreate = "@(ViewBag.allowCreate)";
    var allowUpdate = "@(ViewBag.allowUpdate)";
    var allowDelete = "@(ViewBag.allowDelete)";
    var allowRead = "@(ViewBag.AllowRead)";
</script>
<link href="/Scripts/kartik-v-bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
<style type="text/css">
    .form-horizontal .control-label {
        text-align: left !important;
    }

    .toolbarBtn {
        margin-top: 10px;
    }
    .pagination .page-pre .page-link,
    .pagination .page-next .page-link{
        padding: 0 12px !important;
    }
    .modal { overflow: auto !important; }
</style>

<div class="box box-warning">
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div id="toolbar" class="toolbar">
                    @{
                        if (ViewBag.AllowCreate)
                        {
                            <button class="btn btn-success" type="button" id="btnAddRequest">
                                <i class="fa fa-plus-circle"></i> New
                            </button>
                        }
                    }
                    <button class="btn btn-success" type="button" id="btnExportDR">
                        <i class="fa fa-file-excel-o"></i> Download to Excel
                    </button>
                </div>
                <table id="tableDeliveryRequisition" data-toolbar=".toolbar" class="table table-striped"></table>
            </div>
        </div>
    </div>
</div>
<div id='myModalRequest' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="width: 1280px;">
            @Html.Partial("~/Views/DTS/v2/_FormRequisiting.cshtml")
        </div>
    </div>
</div>

<div id='myModalUnitOnly' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.Partial("~/Views/DTS/v2/_DeliveryRequisitionUnit.cshtml")
        </div>
    </div>
</div>

@section scripts
{
    <script src="/Scripts/kartik-v-bootstrap-fileinput/js/fileinput.min.js"></script>
    <script src="/Scripts/adminlte.js"></script>
    <script src="/Scripts/loadingoverlay.min.js"></script>
    <script src="/Scripts/jquery-input-mask-phone-number.js"></script>

    <script src="@Url.Content("~/Scripts.app/DTS/v2/_FormRequisiting.cshtml.js")"></script>
    <script src="@Url.Content("~/Scripts.app/DTS/v2/DeliveryRequisitionList.cshtml.js")"></script>

}

