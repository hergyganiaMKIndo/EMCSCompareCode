@{
    ViewBag.Title = "Track Your Goods";
}


@using System.Web.Mvc 
<script src="~/Scripts/jquery.table2excel.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="box box-warning">
            <div id="panelHeader"> 
                <form role="form">
                    <div class="box-body">
                        <div class="row">

                            <div id="SimplePage" style="padding-top:50px">
                                <center>
                                    <div class="form-group">
                                        <div class="input-group col-lg-8 col-xs-8">
                                            <input type="text" class="form-control inputSN Active" id="SN" placeholder="Please Input Serial Number" />
                                            <div class="input-group-addon cal btnFilter" id="btnFilter" style="background-color: #00c0ef;border-color: #00c0ef;">
                                                <i class="fa fa-search" style="vertical-align:middle;text-align:center"></i>
                                            </div>
                                            <div class="input-group-addon cal" id="btnShowAdvance" style="background-color: #f39c12; border-color: #f39c12;">
                                                <i class="glyphicon glyphicon-chevron-down"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <label>The above information is mandatory</label>
                                </center>
                            </div>

                            @*</div>*@
                            <div id="AdvancePage" style="padding-top:10px;display: none;">
                                @Html.Partial("_filterDTS")
                            </div>
                            <div class="col-lg-12">
                                @*<hr>*@
                                @*<div class="toolbar">
                                        <div class="fa-pull-left" id="mySearch" style="padding-right:2px">
                                            <a href="#" class="btn btn-info downloadExcel" style="width:150px;">
                                                <i class="fa fa-download"></i> Export to Excel
                                            </a>
                                        </div>
                                    </div>*@
                                <center>
                                    @*<div class="toolbar">*@
                                    @*<table class="table table-bordered table-striped" id="tableDeliveryTrackingStatus" style="table-layout:fixed;"></table>*@
                                    @*</div>*@

                                    <div class="col-lg-12">
                                        <div style="border-top: 1px solid #e3e3e3; margin-top:7px"></div>
                                        <table class="table table-bordered table2excel" id="tableDeliveryTracking" style="table-layout:fixed;" data-show-export="true"
                                               data-toolbar="#filter-bar" data-toggle="table" data-show-toggle="true" data-show-columns="true" data-show-filter="true"></table>
                                    </div>
                                </center>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="box-body" id="panelDetail" style="display: none">
                <div class="row">
                    <div id="detail"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- modal placeholder-->
<div id='myModalMilestone' class='modal fade in'>
    <div class="modal-dialog" style="width: 70%;">
        <div class="modal-content">
            <div id='myModalMilestoneContent'></div>
        </div>
    </div>
</div>

<script src="~/Scripts.app/DeliveryTrackingStatus/Dts.cshtml.js"></script>
@section scripts
{
    <script src="/Scripts/extension/export/bootstrap-table-export.js"></script>
    <script src="/Scripts/extension/export/tableExport.js"></script>
    <script src="/Scripts/extension/export/jquery.base64.js"></script>
}