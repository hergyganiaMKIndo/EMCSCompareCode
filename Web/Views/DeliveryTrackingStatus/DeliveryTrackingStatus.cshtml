@{
    ViewBag.Title = "Delivery Tracking Status";
}
 

@using System.Web.Mvc
<script src="~/Scripts/jquery.table2excel.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="box box-warning">
            <div id="parent">
                <form role="form">
                    <div class="box-body">
                        <div class="row">

                            <div id="SimplePage" style="padding-top:50px">
                                <center>
                                    <div class="form-group">
                                        <div class="input-group col-lg-2 col-xs-1">
                                            <input type="text" class="form-control" placeholder="Please Input Serial Number" />
                                            <button id="btnFilter" type="button" class="btn btn-info col-lg-1 col-xs-1" style="width:35px"><i class="fa fa-search"></i></button>
                                            <button id="btnShowAdvance" type="button" class="btn btn-warning" style="width:35px"><i class="glyphicon glyphicon-chevron-down"></i></button>
                                            <label>The above information is mandatory</label>
                                        </div>
                                    </div>
                                </center>
                            </div>

                            <div id="AdvancePage" style="padding-top:50px">
                                @Html.Partial("_filterDTS")
                            </div>
                            <div class="col-lg-12">
                                <hr>
                                <div class="toolbar">
                                    <div class="fa-pull-left" id="mySearch" style="padding-right:2px">
                                        <a href="#" class="btn btn-info downloadExcel" style="width:150px;">
                                            <i class="fa fa-download"></i> Export to Excel
                                        </a>
                                    </div>
                                </div>
                                <center>
                                    <table class="table table-bordered table-striped" id="tableDeliveryTrackingStatus" style="table-layout:fixed;"></table>
                                </center>
                            </div>
                        </div>
                    </div>
                </form>
                <br />
                <div class="progress">
                    <div class="progress-bar"></div>
                </div>

                <div id="status"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts.app/DeliveryTrackingStatus/DeliveryTrackingStatus.cshtml.js"></script>

<script type="text/javascript">
    $("#SimplePage").show();
    $("#AdvancePage").hide();
    $("#btnShowAdvance").click(function () {
            $("#SimplePage").hide();
            $("#AdvancePage").show();
        });
</script>
