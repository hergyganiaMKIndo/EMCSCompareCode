@*@model App.Web.Models.PartsMappingView*@
@{
    ViewBag.Title = "Import Master Freight Cost Calculator";
    string message = ViewBag.Message + "";
}

@using System.Web.Mvc
<script src="~/Scripts/jquery.table2excel.js"></script>
@{
    if (ViewBag.AllowDelete)
    {
        <input type="hidden" name="AllowDelete" id="AllowDelete" class="form-control" value="True">
    }

    if (ViewBag.AllowUpdate)
    {
        <input type="hidden" name="AllowUpdate" id="AllowUpdate" class="form-control" value="True">
    }
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-warning">
            <form role="form">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-6">
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="col-lg-6">
                            </div>
                            <div class="col-lg-6">

                            </div>

                        </div>

                        <div class="col-lg-12">
                            <hr>
                            <center>
                                <div class="toolbar">
                                    @{
                                        if (ViewBag.AllowCreate || ViewBag.AllowUpdate || ViewBag.AllowDelete)
                                        {
                                            <a href="" id="Import" name="Import" class="btn btn-info" onclick="document.getElementById('filexls').click(); return false" style="width:150px;">
                                                <i class="fa fa-upload"></i> Import/Upload
                                            </a>
                                            <a href="/temp/Template-ffCalculator.xlsx" style="width:150px;" class="btn btn-info">
                                                <i class="fa fa-download"></i> Download Template
                                            </a>
                                            <table class="table table-bordered table-striped" id="tableLogImportFCC" style="table-layout:fixed;"></table>
                                        }
                                    }
                                </div>
                            </center>
                        </div>
                    </div>
                </div>

                <br />
                <div class="progress">
                    <div class="progress-bar"></div>
                </div>

                <div id="status"></div>

            </form>

            <form id="submitExcel" method="post" action="SaveUpload" enctype="multipart/form-data">
                <input type="file" id="filexls" name="upload" style="visibility: hidden;" onchange="$('#submitExcel').submit();" />
                @*<input type="file" id="filexls" name="upload" style="visibility: hidden;" onchange="javascript:excelSubmit();" />*@
            </form>

        </div>
    </div>
</div>

@section scripts
{
    <script>
        var msg = '@message';
        if (msg != '') {
            sAlert('', msg, '');
        }

    </script>

    @*<script src="@Url.Content("~/Scripts.app/FreightCostCalculator/FreightCostCalculator.cshtml.js")"></script>*@
    <script src="@Url.Content("~/Scripts.app/FreightCostCalculator/ImportFCC.cshmtl.js")"></script>
}
