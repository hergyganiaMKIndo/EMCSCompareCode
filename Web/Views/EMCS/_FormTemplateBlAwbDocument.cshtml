@model  App.Web.Models.EMCS.BlAwbModel
@{int j = 1;
    for (int i = 0; i < Model.documentsList.Count; i++)
    {
        <tr id="trCompleteDoc_@j">
            <td>
                <div class="form-group div-mandatory">
                    <label class="control-label" id="label-document-SK"><strong>BL / AWB Document - @j</strong></label>
                    <input type="text" class="hide do-not-ignore" name="UrlDocumentDOC" id="url-document-DOC-@Model.documentsList[i].Id" required />
                </div>
            </td>
            <td class="text-center">
                <button class="btn btn-info btn-xs dz-clickable" id="document-DOC-@Model.documentsList[i].Id" type="button" data-toggle="tooltip" title="Upload!"><i class="fa fa-upload"></i></button>
                <button class="btn btn-default btn-xs preview-document" id="preview-document-DOC-@Model.documentsList[i].Id" type="button" data-toggle="tooltip" title="View Document!"><i class="fa fa-search"></i></button>
                <a href="#" class="btn btn-success btn-xs DownloadDocument" id="download-document-DOC-@Model.documentsList[i].Id" type="button" target="_blank" data-toggle="tooltip" title="Download!"><i class="fa fa-download"></i></a>
                <div id="previews">
                    <div id="template" class="template file-row dz-image-preview">
                        <div>
                            <p class="name" data-dz-name=""></p>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        j++;
    }

}

