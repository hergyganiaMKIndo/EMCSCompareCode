{
    <script>
        var wizardState = @ViewBag.WizardData.Progress;
        var spacing = 0;
        if ('@Model.TemplateDetail.Count' < 25)
            spacing = ((250 / 20) - '@Model.TemplateDetail.Count') * 20;
        $('.spacing').css("height", spacing + 'px');

    </script>
