@model  App.Web.Models.EMCS.BannerHomeModel
@{
    ViewBag.Title = "Home";
}
@Styles.Render("~/Content/EMCS/Custom.css")
@Styles.Render("~/Content/EMCS/Home.css")
<script>
    function testing() {
        location.href = myApp.fullPath + "/EMCS/MyTask";
    }
</script>

<div id="row-slider" style="max-width:1315px;margin:10px auto !important;display:flex;justify-content:center;border:2px solid white;box-shadow: 0px 0px 0px 2px rgba(212,208,212,1);">
    <div id="banner_1" style="position:relative;top:0px;left:0px;width:1300px;height:380px;overflow:visible;">
        <div data-u="slides" id="slider-content" style="position:absolute;top:0px;left:0px;width:1300px;height:380px;overflow:visible;">
            @foreach (var item in Model.Banner)
            {
                <div><img alt="Banner Image" data-u="image" src="~/Images/EMCS/Banner/@(item.Images)" /></div>
            }
        </div>

        <div data-u="arrowleft" class="jssora091" style="width:24px;height:40px;top:0px;left:-1px;" data-autocenter="2" data-scale="0.75" data-scale-left="0">
            <svg viewBox="-199 -3000 9600 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
                <path class="c" d="M-199-2428.1C317.2-2538.7,851.8-2600,1401-2600c4197.3,0,7600,3402.7,7600,7600 s-3402.7,7600-7600,7600c-549.2,0-1083.8-61.3-1600-171.9V-2428.1z"></path>
                <polygon class="a" points="4806.7,1528.5 4806.7,1528.5 4806.7,2707.8 2691.1,5000 4806.7,7292.2 4806.7,8471.5 4806.7,8471.5 1602,5000 "></polygon>
            </svg>
        </div>
        <div data-u="arrowright" class="jssora091" style="width:24px;height:40px;top:0px;right:-1px;" data-autocenter="2" data-scale="0.75" data-scale-right="0">
            <svg viewBox="-199 -3000 9600 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
                <path class="c" d="M9401,12428.1c-516.2,110.6-1050.8,171.9-1600,171.9c-4197.3,0-7600-3402.7-7600-7600 s3402.7-7600,7600-7600c549.2,0,1083.8,61.3,1600,171.9V12428.1z"></path>
                <polygon class="a" points="7401,5000 4196.3,8471.5 4196.3,8471.5 4196.3,7292.2 6311.9,5000 4196.3,2707.8 4196.3,1528.5 4196.3,1528.5 "></polygon>
            </svg>
        </div>

        <!-- bullet navigator container -->
        <div data-u="navigator" class="jssorb062" style="bottom:16px;right:16px;">
            <div data-u="prototype" class="i" style="width:16px;height:16px;">
                <svg viewBox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
                    <circle class="b" cx="8000" cy="8000" r="5800" />
                </svg>
            </div>
        </div>
    </div>
</div>

<div id="div-btn-touch-me">
    <button id="touch-me-button" class="text-danger bg-yellow-gradient">
        <b>Click Here !</b>
    </button>
</div>

<div id="div-btn-show-hide" style="display:none;">
    <div class="row" style="display:flex;justify-content:center;margin-top:100px;margin-bottom:100px;">
        <div id="div-button-spinner" style="justify-content:center;display:inline-flex;width:70%;">

            <div class="text-center dropdown btn_menu_home" title="My Task" onclick="testing()">
                <div class="dropdown-toggle btn_menu_home_wrap" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="text-center btn_menu_home_item">
                        <span class="fa fa-thumb-tack fa-2x"></span>
                    </div>
                </div>
            </div>

            <div class="text-center dropdown btn_menu_home" title="Transaction">
                <div class="dropdown-toggle btn_menu_home_wrap" data-toggle="dropdown" aria-expanded="false">
                    <div class="text-center btn_menu_home_item">
                        <span class="fa  fa-ship fa-2x"></span>
                    </div>
                </div>
                <ul class="dropdown-menu pull-left" role="menu">
                    <li style="padding:5px;border-bottom:1px solid #ebe6e6;width:200px;">
                        <a href="~/EMCS/CiplList">Commercial Invoice Packing List</a>
                    </li>
                    <li style="padding:5px;border-bottom:1px solid #ebe6e6;">
                        <a href="~/EMCS/GRList">BAST Receipt Goods</a>
                    </li>
                    <li style="padding:5px;border-bottom:1px solid #ebe6e6;">
                        <a href="~/EMCS/CargoList">Cargo List</a>
                    </li>
                </ul>
            </div>

            <div class="text-center dropdown btn_menu_home" title="Report">
                <div class="dropdown-toggle btn_menu_home_wrap" data-toggle="dropdown" aria-expanded="false">
                    <div class="text-center btn_menu_home_item">
                        <span class="fa fa-pie-chart fa-2x"></span>
                    </div>
                </div>
                <ul class="dropdown-menu dropdown-menu-left" role="menu">
                    <li style="padding:5px;border-bottom:1px solid #ebe6e6;width:200px;">
                        <a href="~/EMCS/DetailsTracking">Details Tracking Reports</a>
                    </li>
                    <li style="padding:5px;border-bottom:1px solid #ebe6e6;">
                        <a href="~/EMCS/ExportActivity">Export Activity Report</a>
                    </li>
                    <li style="padding:5px;border-bottom:1px solid #ebe6e6;">
                        <a href="~/EMCS/ReportOutstandingCipl">Outstanding Cipl Report</a>
                    </li>
                </ul>
            </div>

            <div class="text-center dropdown btn_menu_home" title="User Guide">
                <div class="dropdown-toggle btn_menu_home_wrap" data-toggle="dropdown" aria-expanded="false">
                    <div class="text-center btn_menu_home_item">
                        <span class="fa fa-book fa-2x"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

