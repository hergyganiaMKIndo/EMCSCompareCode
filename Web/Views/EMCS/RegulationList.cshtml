@{
    ViewBag.Title = "Regulation";
}

@using System.Web.Mvc
@Styles.Render("~/Content/EMCS/SweetAlert/sweetalert2.min.css")
<script type="text/javascript">
    var allowCreate = "@(ViewBag.allowCreate)";
    var allowUpdate = "@(ViewBag.allowUpdate)";
    var allowDelete = "@(ViewBag.allowDelete)";
</script>

@{
    if (ViewBag.AllowDelete)
    {
        <input type="hidden" name="AllowDelete" id="AllowDelete" class="form-control" value="True">
    }

    if (ViewBag.AllowUpdate)
    {
        <input type="hidden" name="AllowUpdate" id="AllowUpdate" class="form-control" value="True">
    }
}
<style type="text/css">
    .form-horizontal .control-label {
        text-align: left !important;
    }

    .toolbarBtn {
        margin-top: 10px;
    }
</style>

<div class="box box-warning">
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div class="toolbar">
                    @{
                        if (ViewBag.AllowCreate)
                        {
                            <a class="btn btn-success" data-modal="" style="width:150px;" href="/EMCS/RegulationCreate/1" id="btnCreate">
                                <i class="fa fa-plus"></i> Add Regulation
                            </a>
                        }
                    }
                    <div class="fa-pull-left" id="mySearch" style="padding-right:2px">
                        <input name="searchText" class="form-control" type="text" placeholder="Search..." style="height: 32px;">
                    </div>
                </div>
                <table id="tableRegulation" data-toolbar=".toolbar" class="table table-bordered"></table>
            </div>
        </div>
    </div>
</div>

<a data-modal="" href="/EMCS/RegulationEdit/1" class="editRecord" style="display:none;">
    <i class="fa fa-edit"></i> Update Regulation
</a>

<a data-modal="myModalUploadPlace" href="/EMCS/RegulationUpload/1" class="uploadRecord" style="display:none;">
    <i class="fa fa-edit"></i> Upload Regulation Document
</a>

<a data-modal="myModalPreviewPlace" href="/EMCS/PreviewDocument/1" class="previewDocument" style="display:none;">
    <i class="fa fa-edit"></i> Preview Document
</a>

<div id='myModalPlace' class='modal fade in'>
    <div class="modal-dialog" style="width:800px">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div id='myModalUploadPlace' class='modal fade in'>
    <div class="modal-dialog" style="width:800px">
        <div class="modal-content">
            <div id='myModalUploadContent'>
                <div class="modal-header"></div>
            </div>
        </div>
    </div>
</div>

<div id='myModalPreviewPlace' class='modal fade in'>
    <div class="modal-dialog" style="width:800px">
        <div class="modal-content">
            <div id='myModalPreviewContent'>
                <div class="modal-header"></div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/EMCS/Modal.PreviewDocument.cshtml")
@section Scripts{
    <script src="/Scripts/loadingoverlay.min.js"></script>
    <script src="@Url.Content("~/Scripts.app/EMCS/Regulation.cshtml.js")"></script>
    <script src="@Url.Content("~/Scripts.app/EMCS/Custom.js")"></script>
}


