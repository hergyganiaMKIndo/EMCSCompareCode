    <script src="@Url.Content("~/Scripts.app/EMCS/report/PebReport.cshtml.js")"></script>
    <script src="@Url.Content("~/Scripts.app/EMCS/Custom.js")"></script>
    <script>
        $(document).ready(function () {

            $('.columns-right').prepend('<button class="btn btn-default"  id="refresh" title="Refresh"><i class="glyphicon glyphicon-refresh icon-refresh"></i></button>');

            $('#refresh').on('click', function () {
                $('#inp-start-date').val(null);
                $('#inp-end-date').val(null);
                window.pis.table({
                    objTable: $table,
                    urlSearch: '/EMCS/RPebNpePage?isclick=' + false,
                    urlPaging: '/EMCS/RPebNpePageXt',
                    autoLoad: true
                });
                    
                
            })
        })
    </script>
}
