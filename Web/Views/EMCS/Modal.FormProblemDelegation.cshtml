@Styles.Render("~/Content/EMCS/Autocomplete/easy-autocomplete.css")
@Styles.Render("~/Content/EMCS/Autocomplete/easy-autocomplete.themes.css")
<div id="myModalProblemDelegation" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <!-- Modal content-->
        <div class="modal-content">
            <div id='myModalProblemDelegationContent'>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <span style="font-size:14px;"><strong>Delegation Form</strong></span>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group hidden">
                                    <input type="text" name="IdRequest" value="@ViewBag.IdReq" class="form-control hidden" />
                                    <input type="text" name="ReqType" value="@ViewBag.TypeReq" class="form-control hidden" />
                                    <input type="text" name="IdStep" value="@ViewBag.IdStep" class="form-control hidden" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="DelegationTo">Delegation To</label>
                                    <select id="DelegationTo" name="DelegationTo" class="form-control select2" required placeholder="Select Person">
                                        <option value="" selected>Select Person</option>
                                    </select>
                                </div>
                                @*<div class="form-group">
                                        <label class="control-label" for="ProblemCategoryDelegation">Problem Category</label>
                                        <select id="ProblemCategoryDelegation" name="Category" class="form-control select2" required placeholder="Select Category">
                                            <option value="" selected>Select Category</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="ProblemCasesDelegation">Problem Case</label>
                                        <select id="ProblemCasesDelegation" name="Case" class="form-control select2" required placeholder="Select Case">
                                            <option value="" selected>Select Case</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="ProblemCausesDelegation">Problem Causes</label>
                                        <input id="ProblemCausesDelegation" name="Causes" placeholder="Causes" required class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="ProblemImpactDelegation">Problem Impact</label>
                                        <textarea id="ProblemImpactDelegation" name="Impact" placeholder="Problem Impact" cols="4" rows="4" required class="form-control"></textarea>
                                    </div>*@
                                <div class="form-group">
                                    <label class="control-label" for="ProblemDateDelegation">Problem Date</label>
                                    <input id="ProblemDateDelegation" name="CaseDate" placeholder="Problem Date" required autocomplete="off" class="date form-control">
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="ProblemNoteDelegation">Note</label>
                                    <textarea id="ProblemNoteDelegation" name="Comment" placeholder="Notes" cols="4" rows="4" required class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="YesSubmitBtn" class="btn btn-warning"><i class="fa fa-check"></i>&nbsp;Yes, Submit!</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" data-toggle="modal"><i class="fa fa-times"></i>&nbsp;Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>