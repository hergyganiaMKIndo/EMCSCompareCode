@Styles.Render("~/Content/EMCS/Autocomplete/easy-autocomplete.css")
@Styles.Render("~/Content/EMCS/Autocomplete/easy-autocomplete.themes.css")
<div id="myModalProblem" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <!-- Modal content-->
        <div class="modal-content">
            <div id='myModalProblemContent'>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <span style="font-size:14px;"><strong>Problem Form</strong></span>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group hidden">
                                    <input type="text" name="IdRequest" value="@ViewBag.IdReq" class="form-control hidden" />
                                    <input type="text" name="ReqType" value="@ViewBag.TypeReq" class="form-control hidden" />
                                    <input type="text" name="IdStep" value="@ViewBag.IdStep" class="form-control hidden" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="ProblemCategory">Problem Category</label>
                                    <select id="ProblemCategory" name="Category" class="form-control select2" required placeholder="Select Category">
                                        <option value="" selected>Select Category</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="ProblemCases">Problem Case</label>
                                    <select id="ProblemCases" name="Case" class="form-control select2" required placeholder="Select Case">
                                        <option value="" selected>Select Case</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="ProblemDate">Problem Date</label>
                                    <input id="ProblemDate" name="CaseDate" placeholder="Problem Date" required autocomplete="off" class="date form-control">
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="ProblemCauses">Problem Causes</label>
                                    <input id="ProblemCauses" name="Causes" placeholder="Causes" required class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="ProblemImpact">Problem Impact</label>
                                    <textarea id="ProblemImpact" name="Impact" placeholder="Problem Impact" cols="4" rows="4" required class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="ProblemNote">Note</label>
                                    <textarea id="ProblemNote" name="Comment" placeholder="Notes" cols="4" rows="4" required class="form-control"></textarea>
                                </div>
                                <p>By approving this document, you are responsible for the authenticity of the documents and data entered. Are you sure you want to process this document?</p>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="YesApproveBtn" class="btn btn-success"><i class="fa fa-paper-plane"></i>&nbsp;Yes, Approve!</button>
                        <button type="button" id="YesRejectBtn" class="btn btn-danger"><i class="fa fa-trash"></i>&nbsp;Yes, Reject!</button>
                        <button type="button" id="YesReviseBtn" class="btn btn-warning"><i class="fa fa-undo"></i>&nbsp;Yes, Revise!</button>
                        <button type="button" id="YesCancelBtn" class="btn btn-warning"><i class="fa fa-times"></i>&nbsp;Yes, Cancel!</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" data-toggle="modal"><i class="fa fa-times"></i>&nbsp;Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>