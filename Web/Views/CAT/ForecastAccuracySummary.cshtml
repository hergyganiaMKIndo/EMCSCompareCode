@using System.Web.Mvc
@using App.Web

@model App.Web.Models.CAT.ForecastAccuracyFilter
@{
    ViewBag.Title = "Forecast Accuracy Summary (SOS 500 dan 800)";
}
<style type="text/css">
    .form-horizontal .control-label {
        text-align: left !important;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="box box-warning" style="min-height:555px">
            <div id="parent">
                <form id="form" role="form">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label col-lg-4 col-xs-4">Customer</label>
                                        <div class="input-group col-lg-8 col-xs-8">
                                            @Html.DropDownListFor(m => m.customer_id, new SelectList(Model.customer_list, "CUSTOMERNAME", "CUSTOMERNAME"), "ALL", new { @class = "js-states form-control", @style = "display:none" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-4 col-xs-4">Month</label>
                                        <div class="input-group col-lg-8 col-xs-8">
                                            @*@Html.TextBoxFor(m => m.month_id, new { @class = "form-control" })*@
                                            @Html.DropDownListFor(m => m.month_id, new SelectList(Model.month_list, "ID", "Name"), "ALL", new { @class = "js-states form-control", @style = "display:none" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label col-lg-4 col-xs-4">Store</label>
                                        <div class="input-group col-lg-8 col-xs-8">
                                            @Html.DropDownListFor(m => m.store_id, new SelectList(Model.store_list, "StoreNo", "Name"), "ALL", new { @class = "js-states form-control", @style = "display:none" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-4 col-xs-4">Year</label>
                                        <div class="input-group col-lg-8 col-xs-8">
                                            @Html.TextBoxFor(m => m.year, new { @class = "form-control", @readonly = "readonly" })
                                            <div class="input-group-addon cal" style="background:#00C0EF;border-color:#00ACD6;">
                                                <i class="fa fa-calendar" style="color:#FFFFFF;"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12" style="text-align:right;padding-right:30px;">
                                <button type="button" id="btn-filter" class="btn btn-success" style="width:125px;"><i class="fa fa-search"></i> Filter</button>
                                <button type="button" id="btn-clear" class="btn btn-danger" style="width:125px;"><i class="fa fa-times-circle"></i> Clear</button>
                            </div>
                            <div class="col-lg-12">
                                <div style="border-top: 1px solid #e3e3e3; margin-top:7px"></div>
                                <div class="toolbar">
                                    <a href="#" class="btn btn-info downloadExcel" style="width:150px;">
                                        <i class="fa fa-download"></i> Download
                                    </a>
                                </div>
                                <table class="table table-bordered table2excel" id="table-fore-acc-sum" style="width:1300px;" data-show-filter="true"></table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="box-body">
                <div class="row">
                    <div id="detail" style="display: none"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts.app/cat/ForecastAccuracySummary.cshtml.js"></script>
    <script src="/Scripts/extension/export/bootstrap-table-export.js"></script>
    <script src="/Scripts/extension/export/tableExport.js"></script>
    <script src="/Scripts/extension/export/jquery.base64.js"></script>
    <script src="/Scripts/bootstrap-datepicker.js"></script>
}
