@model  App.Web.Models.EMCS.CiplModel
<table border="0" class="table-data">
    <thead>
        <tr>
            <th class="text_center text_bold tabledata_spacing broder_bottom" rowspan="2" style="width:5%;border-bottom:0.7px solid #b9b6b6;">No.</th>
            <th class="text_center text_bold tabledata_spacing broder_bottom" rowspan="2" style="width:10%;border-bottom:0.7px solid #b9b6b6;">Name</th>
            <th class="text_center text_bold tabledata_spacing broder_bottom" rowspan="2" style="width:10%;border-bottom:0.7px solid #b9b6b6;">SN</th>
            <th class="text_center text_bold tabledata_spacing broder_bottom" rowspan="2" style="                width: 5%;
                border-bottom: 0.7px solid #b9b6b6;">Year</th>
            <th class="text_center text_bold tabledata_spacing broder_bottom" rowspan="2" style="width:8%;border-bottom:0.7px solid #b9b6b6;">Ref.</th>
            <th class="text_center text_bold tabledata_spacing broder_bottom" rowspan="2" style="width:5%;border-bottom:0.7px solid #b9b6b6;">Qty</th>
            <th class="text_center text_bold tabledata_spacing broder_bottom" colspan="3" style="width:15%;border-bottom:0.7px solid #b9b6b6;">Dimension (In CM)</th>
            <th class="text_center text_bold tabledata_spacing broder_bottom" rowspan="2" style="width:9%;border-bottom:0.7px solid #b9b6b6;">Volume (M3)</th>
            <th class="text_center text_bold tabledata_spacing broder_bottom" rowspan="2" style="width:10%;border-bottom:0.7px solid #b9b6b6;">Nett Weight (Kgs)</th>
            <th class="text_center text_bold tabledata_spacing broder_bottom" rowspan="2" style="width:10%;border-bottom:0.7px solid #b9b6b6;">Gross Weight (Kgs)</th>
        </tr>
        <tr>
            <th class="text_center text_bold tabledata_spacing border_bottom" style="width:5%;background-color:white">Length</th>
            <th class="text_center text_bold tabledata_spacing border_bottom" style="width:5%;background-color:white">Width</th>
            <th class="text_center text_bold tabledata_spacing border_bottom" style="width:5%;background-color:white">Height</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TemplateDetail)
        {
            <tr>
                <td class="text_9 tabledata_spacing text_right">@item.ItemNo</td>
                <td class="text_9 tabledata_spacing">@item.Name</td>
                <td class="text_9 tabledata_spacing">@item.Sn</td>
                <td class="text_9 tabledata_spacing">@item.YearMade</td>
                <td class="text_9 tabledata_spacing">@item.ReferenceNo</td>
                <td class="text_9 tabledata_spacing text_right">@item.Quantity</td>
                <td class="tabledata_spacing text_right">@((item.Length == "0.00") ? "" : item.Length)</td>
                <td class="tabledata_spacing text_right">@((item.Width == "0.00") ? "" : item.Width)</td>
                <td class="tabledata_spacing text_right">@((item.Height == "0.00") ? "" : item.Height)</td>
                <td class="tabledata_spacing text_right">@((item.Volume == "0.000000") ? "" : item.Volume)</td>
                <td class="tabledata_spacing text_right">@((item.NetWeight == "0.00") ? "" : item.NetWeight)</td>
                <td class="tabledata_spacing text_right">@((item.GrossWeight == "0.00") ? "" : item.GrossWeight)</td>
            </tr>
        }
        @{
            if (Model.TemplateDetail.Count <= 2)
            {
                int dummy = 5;
                for (int no = 1; no <= dummy; no++)
                {
                    <tr><td colspan="12" class="border_left border_right" style="border-top:1px solid white;">&nbsp;</td></tr>
                    if (no == 5)
                    {
                        <tr><td colspan="12" class="border_bottom border_left border_right">&nbsp;</td></tr>
                    }
                }
            }
        }
    </tbody>
</table>