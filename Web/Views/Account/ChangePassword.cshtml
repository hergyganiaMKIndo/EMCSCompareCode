@model App.Web.Models.AccountPasswordViewModel
@{
	ViewBag.Title = "Change Password";
}

<main>
	<div class="container">
		<fieldset>
			<legend class="col-lg-8 col-lg-offset-2 col-md-9 col-md-offset-1 col-sm-12">Manage your account</legend>
			<div class="col-lg-7 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
				@*@using(Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))*@
				@using(Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "submitPage()" }))
				{
					@Html.AntiForgeryToken()
					<div class="panel panel-info">
						<div class="panel-heading">
							<h2 class="panel-title">Change Password</h2>
						</div>
						<div class="panel-body">

							@Html.ValidationSummary("", new { @class = "text-danger" })
							<div class="form-group">
								@Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-3 control-label" })
								<div class="col-sm-9">
									@Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-3 control-label" })
								<div class="col-sm-9">
									@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label" })
								<div class="col-sm-9">
									@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
								</div>
							</div>
						</div>
						<div class="panel-footer">
							<button type="submit" class="btn btn-success" tabindex="10">Change Password</button>
							@*&nbsp;&nbsp;@Html.ActionLink("Back to account options", "Manage")*@
						</div>
					</div>
				}
			</div>
		</fieldset>
		<script>
			$('button').prop('disabled', false)
			$('.btn-success').text('Change Password')

			function submitPage() {
				//$('button').prop('disabled', true)
				//$('.btn-success').text('...Password updating...')
			}
		</script>
	</div>
</main>