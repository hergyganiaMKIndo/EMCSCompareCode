@using System.Web.Mvc

@model App.Web.Models.SurveyView
@{
	ViewBag.Title = "e-LS";
}


<div class="row">
	<div class="col-md-12">
		<div class="box box-warning" style="min-height:505px">
			@*<div class="box-header"><h3 class="box-title">@ViewBag.Title</h3></div>*@

			<form id="parent" role="form" onsubmit="return formSubmit(this)">
				<div class="box-body">
					<div class="row">

						<div class="col-lg-12">
							<div class="row">
								<div class="col-lg-12">
									<div class="col-lg-6">
										<div class="form-group">
											<label class="control-label col-lg-4 col-xs-4">Batch Number</label>
											<div class="input-group col-lg-8 col-xs-8">
												<input id="SurveyID" type="number" class="form-control" />
											</div>
										</div>
										<div class="form-group">
											<label class="control-label col-lg-4 col-xs-4">VR Number</label>
											<div class="input-group col-lg-8 col-xs-8">
												<input id="VRNo" type="text" class="form-control" />
											</div>
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form-group">
											<label class="control-label col-lg-4 col-xs-4">VR Date</label>
											<div class="input-group col-lg-8 col-xs-8">
												@Html.TextBoxFor(m => m.DateSta, new { @class = "form-control pull-left date", style = "width:50%", placeholder = "from" })
												@Html.TextBoxFor(m => m.DateFin, new { @class = "form-control pull-left date", style = "width:50%", placeholder = "to" })
												@Html.ValidationMessageFor(m => m.DateFin)
												<div class="input-group-addon">
													<i class="fa fa-calendar"></i>
												</div>
											</div>
										</div>
										<div class="form-group">
											<label class="control-label col-lg-4 col-xs-4">VO Number</label>
											<div class="input-group col-lg-8 col-xs-8">
												<input id="VONo" type="text" class="form-control" />
											</div>
										</div>
									</div>
								</div>

								<div class="col-lg-12">
									<div class="col-lg-6">
										<div class="form-group">
											<label class="control-label col-lg-4 col-xs-4"></label>
											<div class="input-group col-lg-8 col-xs-8">
												
											</div>
										</div>
									</div>
									<div class="col-lg-6">
										<button id="btnFilter" type="button" class="btn btn-success" style="float:right; margin-right:10px"><i class="fa fa-search"></i> Filter</button>
									</div>
								</div>
								<div class="col-lg-12">
									<hr style="height:1px" />
								</div>
							</div>


							<div class="toolbar">
								@*<a href="#" class="btn btn-default downloadExcel">
									<i class="fa fa-download"></i> Download to Excel
								</a>*@
							</div>
							<table class="table table-bordered" id="tableSurvey" style="width:100%"></table>
						</div>

					</div>
				</div>

			</form>

			<div class="box-body">
				<div class="row">
					<div id="detail" style="display:none"></div>
				</div>
			</div>
		</div>

	</div>
</div>

<script>
</script>
<script src="@Url.Content("~/scripts.app/vetting/eLs.cshtml.js")"></script>
