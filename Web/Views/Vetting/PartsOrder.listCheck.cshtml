			}, {
				field: 'InvoiceDate',
				title: 'Invoice Date',
				halign: 'center',
				align: 'left',
				sortable: true,
				formatter: 'dateFormatter',
				switchable: false
			}, {
				field: 'AgreementType',
				title: 'Agreement Type',
				halign: 'center',
				align: 'left',
				sortable: true
			}, {
