@{Layout = null;}
@model  App.Web.Models.ShipmentView

@{
	var vettingRoute = Model.VettingRoute;
	var shipmentMode = Convert.ToString(Model.ShipmentMode + "");
}
<div class="shipment-form-list col-lg-12">
	<div class="row">
		<div class="row">
			<!-- FILTER KOLOM KIRI - START -->
			<div class="col-lg-6">
				<div class="form-group">
					<label class="control-label col-lg-4 col-xs-4">BL / AWB #</label>
					<div class="input-group col-lg-8 col-xs-8">
						<input id="BLAWB" type="text" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-lg-4 col-xs-4">Vessel / Voyage </label>
					<div class="input-group col-lg-8 col-xs-8">
						<input id="Vessel" type="text" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-lg-4 col-xs-4">ETD </label>
					<div class="input-group col-lg-8 col-xs-8">
						@Html.TextBoxFor(m => m.ETD, new { @class = "form-control pull-left date", placeholder = "" })
						<div class="input-group-addon cal">
							<i class="fa fa-calendar"></i>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-lg-4 col-xs-4">ETA</label>
					<div class="input-group col-lg-8 col-xs-8">
						@Html.TextBoxFor(m => m.ETA, new { @class = "form-control pull-left date", placeholder = "" })
						<div class="input-group-addon cal1">
							<i class="fa fa-calendar"></i>
						</div>
					</div>
				</div>
				<!-- FILTER KOLOM KIRI - END -->
			</div>

			<!-- FILTER KOLOM KANAN - START -->
			<div class="col-lg-6">
				<div class="form-group">
					<label class="control-label col-lg-4 col-xs-4">Loading Port </label>
					<div class="input-group col-lg-8 col-xs-8">
						<input id="LoadingPortDesc" type="text" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-lg-4 col-xs-4">Destination Port </label>
					<div class="input-group col-lg-8 col-xs-8">
						<input id="DestinationPortDesc" type="text" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-lg-4 col-xs-4">Manifest No</label>
					<div class="input-group col-lg-8 col-xs-8">
						<input id="ManifestNo" type="text" class="form-control" />
					</div>
				</div>
				<div class="pull-right col-xs-8" style="text-align:right;padding-right:0;">
					<button id="btnFilter" type="button" class="btn btn-success" style="width:125px;"><i class="fa fa-search"></i> Filter</button>
					<button type="button" id="btn-clear" class="btn btn-danger" style="width:125px;"><i class="fa fa-times-circle"></i> Clear</button>
				</div>
				@*<div class="form-group">
						<div class="input-group col-lg-offset-4 col-xs-8">
								<button id="btnFilter" type="button" class="btn btn-success" style="float:right;width:150px;"><i class="fa fa-search"></i> Filter</button>
						</div>
				</div>*@
			</div>
			<!-- FILTER KOLOM KANAN - END -->
		</div>
		@*
			<div class="col-lg-12">
					<button id="btnFilter" type="button" class="btn btn-success" style="float:right; margin-right:15px"><i class="fa fa-search"></i> Filter</button>
			</div>
		*@
	</div>

	<div class="row">
		<div style="border-top: 1px solid #e3e3e3; margin-top:7px"></div>
	</div>

	<div class="row">
		<div class="toolbar">
			<button id="btnCreateShipment" type="button" class="btn btn-warning" style="width:150px;">
				<i class="fa fa-plus"></i> Create Shipment
			</button>
            <a href="#" class="btn btn-warning downloadExcel">
                <i class="fa fa-download"></i> Download to Excel
            </a>
		</div>
		<table class="table table-bordered" id="tableShipment" style="width:100%"></table>
	</div>
	
</div>


<script>
	var vettingRoute = '@vettingRoute', shipmentMode = '@shipmentMode';
</script>

<script src="@Url.Content("~/scripts.app/vetting/Shipment.cshtml.js")"></script>
