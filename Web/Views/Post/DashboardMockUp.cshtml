        $(".nav-link").on("click", function () {
            setTimeout(function () {
                chart1.setSize(null);
                chart2.setSize(null);
                chart3.setSize(null);
                chart4.setSize(null);
            }, 400);
        })



        function SearchReadyToPay() {
            window.location.href = baseUrl + '/Request?Dashboard=readytopay';
        }
        function SearchProccessing() {
            window.location.href = baseUrl + '/Request?Dashboard=processing';
        }
        function SearchNewRequest() {
            window.location.href = baseUrl + '/Request?Dashboard=newrequest';
        }
        function SearchCompleted() {
            window.location.href = baseUrl + '/Request?Dashboard=complete';
        }
