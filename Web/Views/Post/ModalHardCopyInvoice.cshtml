<div class="modal fade" id="modalhardCopyInvoiceForm" tabindex="-2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="z-index:1050!important">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-left">
                <b class="modal-title w-100 font-weight-bold">Form HardCopy</b>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row" id="submithardcopyinvoice">
                        <div class="col-sm-6">
                            <div class="form-group" id="filenameForm">
                                <label>File Name Invoice</label>
                                <select name="select2file" id="select2file" class="form-control validate"></select>
                            </div>
                            <div class="form-group" id="ItemNameForm">
                                <label>SubmissionType</label>
                                <select name="submissiontype" id="submissiontype" class="form-control validate">
                                    <option value="By Courier" selected>By Courier</option>
                                    <option value="By Ekspedisi">By Ekspedisi</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group" id="notesStatusForm">
                                <label>Recipients Name/ Receipt Number</label>
                                <input type="text" id="ReceiptNameOrNumber" class="form-control validate" style="border-style:solid!important; border-width:1px!important">
                            </div>
                            <div class="form-group" id="SubmissionDateForm">
                                <label id="LabelSubmissionDate">SubmissionDate</label>
                                <div class="input-group">
                                    <input type="text" name="SubmissionDate" class="form-control input-sm" id="submissiondate" placeholder="" />
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="basic-addon2"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                </form>
            </div>
            <div class="modal-footer d-flex">
                <button class="btn btn-primary" id="btnSave" data-dismiss="modal" onclick="UpdateHardCopy()"><i class="fa fa-save"></i>&nbsp;Save</button>
                <button class="btn btn-light" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp;Close</button>
            </div>
            <div class="col-md-12" id="columnLeft">

                <table class="table table-borderless table-striped" id="table-hardcopyinvoice" style="background:white;width:100%;"></table>
                <hr />

            </div>
        </div>
    </div>
</div>